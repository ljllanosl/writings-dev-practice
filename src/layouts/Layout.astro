---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Made with Vanila CSS for practice purposes"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins"
            rel="stylesheet"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Recursive"
            rel="stylesheet"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --white-color: #ffffff;
        --title-color: #ff7575;
        --category-color: #909090;
        --background-color: #232830;
        --card-text-color: #0f1217;
        --twitter-color: #4699e0;
        --hr-color: #4d4d4d;
        --hr-color-o: #4d4d4d88;
        scroll-behavior: smooth;
    }
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        font-family: "Poppins", sans-serif;
        background: var(--background-color);
        color-scheme: dark;
    }
    @media only screen {
        body:not(.os-mac) ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
            border-radius: 20px;
            background-color: rgba(0, 0, 0, 0);
        }
        body:not(.os-mac) ::-webkit-scrollbar:active {
            background-color: rgba(255, 255, 255, 0.1);
        }
        body:not(.os-mac) ::-webkit-scrollbar-thumb {
            border: 2px solid transparent;
            border-radius: 20px;
            box-shadow: inset 0 0 0 20px var(--hr-color-o);
        }
        body:not(.os-mac) ::-webkit-scrollbar-thumb:hover {
            box-shadow: inset 0 0 0 20px var(--hr-color);
        }
        body:not(.os-mac) ::-webkit-scrollbar-thumb:active {
            box-shadow: inset 0 0 0 20px var(--category-color);
        }
    }
</style>
